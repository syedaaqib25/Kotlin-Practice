// finding min and max value
fun main() {
    val numbers = arrayOf(4, 2, 8, 7, 9, 3)

    val minv = numbers.min() //use max for max

    println("Minimum value: $minv")
}
// changing to upper and lower case
fun main() {
    val originalS = "hello, world!"

    val upperC = originalS.toUpperCase() //toUpperCase if u want to chane to uppercase

    println("Uppercase: $upperC")
}
// reverse
fun main() {
    val original = "Kotlin"

    val reverseds = original.reversed()

    println("Reversed: $reverseds")
}
// sort
fun main() {
    val numbers = arrayOf(9, 4, 6, 3, 7)

    numbers.sort()

    println("Sorted Array: ${numbers.joinToString(", ")}")
}
// alternate way of devide
fun main() {
    val nu = 20
    val de = 4

    val result = nu.div(de)

    println("Result: $result")
}
//if else
fun main() {
    val totalAmountOfPurchase = 1000
    val hasMembership = true

    if (totalAmountOfPurchase >= 1000) {
        if (hasMembership) {
            println("You have a 20% discount!")
        } else {
            println("You have a 10% discount!")
        }
    } else {
        println("There is no disco")
}
}
//randome
fun main(){
val randomInt = (1..10).random()

    println("Miscellaneous Functions:")
    println("Random integer from 1 to 10: $randomInt") }
// convert 
fun main(){
 val numString = "123"
    val doubleString = "123.45"

    println("Number Conversion Functions:")
    println("numString.toInt(): ${numString.toInt()}")             // Convert string to Int
    println("doubleString.toDouble(): ${doubleString.toDouble()}") // Convert string to Double
    println("numString.toByte(): ${numString.toByte()}")           // Convert string to Byte
    println("doubleString.toFloat(): ${doubleString.toFloat()}")   // Convert string to Float
    println()
}

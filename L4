//function
fun haha(): Int
{
    val a = 22
    val b = 11
    val c = a/b
    println(c)
    return c
}
fun main(){
    val x=haha()
    println(x)
}
//sum using function
fun sum1(num1: Int, num2:Int): Int
{
    val add = num1+num2
    return add
}
fun main(){
    println(sum1(1,3))
}

// recursive function
var count =0
fun rec(){
    count++;
    if(count<=6)
    {
        println("hello "+count);
        rec();
    }
}
fun main(){
    rec()
}
